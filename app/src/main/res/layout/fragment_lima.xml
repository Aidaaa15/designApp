<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mapsicle_map"
    tools:context=".limaFragment">

    <FrameLayout
        android:layout_width="328dp"
        android:layout_height="150dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            tools:src="@tools:sample/avatars"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card Title"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consecteture adipscing elit"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginLeft="118dp"
            android:layout_marginTop="57dp"/>

        <TextView
            android:layout_width="56dp"
            android:layout_height="16dp"
            android:layout_marginTop="104dp"
            android:layout_marginLeft="118dp"
            android:text="17 Jan 2021"
            android:textSize="10dp"
            android:textColor="#7D7979"/>

        <TextView
            android:layout_width="56dp"
            android:layout_height="16dp"
            android:layout_marginLeft="198dp"
            android:layout_marginTop="104dp"
            android:text="9.00 AM"
            android:textSize="10dp"
            android:textColor="#7D7979"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>